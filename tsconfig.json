{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "ES2022",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "jsx": "react",
    "allowJs": true,
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "*",
        "*.tsx",
        "*.ts"
      ]
    },
    "types": [
      "node",
      "jest",
      "@testing-library/jest-dom"
    ]
  }
}
